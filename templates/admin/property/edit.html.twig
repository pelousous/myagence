{% extends 'base.html.twig' %}
{% block title %}Gerer les biens{% endblock %}

{% block body %}
<div class="container mt-4">
   <h1>Editer les biens</h1>
   
   {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row">
            <div class="col-4">
                {{ form_row(form.title) }}
            </div>
            <div class="col-4">
                {{ form_row(form.surface) }}
            </div>
            <div class="col-4">
                {{ form_row(form.price) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                {{ form_row(form.rooms) }}
            </div>
            <div class="col-2">
                {{ form_row(form.bedrooms) }}
            </div>
                        <div class="col-2">
                {{ form_row(form.heat) }}
            </div>
            <div class="col-2">
                {{ form_row(form.floor) }}
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                {{ form_row(form.floor) }}
            </div>
            <div class="col-6">
                {{ form_row(form.heat) }}
            </div>
            <div class="col-6">
                {{ form_row(form.price) }}
            </div>
        </div>
         <div class="row">
            <div class="col-5">
                {{ form_row(form.address) }}
            </div>
            <div class="col-2">
                {{ form_row(form.city) }}
            </div>
            <div class="col-1">
                {{ form_row(form.postal_code) }}
            </div>
            <div class="col-2">
                {{ form_row(form.sold) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}